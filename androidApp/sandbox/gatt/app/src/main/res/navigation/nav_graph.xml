<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/BluetoothActivity">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.gattbluetoothsandbox.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <!-- Miguel add on -->

        <action
            android:id="@+id/action_FirstFragment_to_BluetoothActivity"
            app:destination="@id/BluetoothActivity" />

    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.gattbluetoothsandbox.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <activity
        android:id="@+id/BluetoothActivity"
        android:name="com.example.gattbluetoothsandbox.BluetoothActivity"
        android:label="Bluetooth Activity"
        tools:layout="@layout/activity_bluetooth">

    </activity>


</navigation>
